<Window x:Class="WPFApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторна робота №1. Завдання 1" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Значення a:" FontFamily="Arial" FontSize="14" Margin="10" />
        <TextBox x:Name="textBoxA" Grid.Row="0" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="10" />

        <Label Grid.Row="1" Grid.Column="0" Content="Значення b:" FontFamily="Arial" FontSize="14" Margin="10" />
        <TextBox x:Name="textBoxB" Grid.Row="1" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="10" />

        <Label Grid.Row="2" Grid.Column="0" Content="Значення c:" FontFamily="Arial" FontSize="14" Margin="10" />
        <TextBox x:Name="textBoxC" Grid.Row="2" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="10" />

        <Button Grid.Row="3" Grid.Column="1" Content="Обчислити" FontFamily="Arial" FontSize="14" Margin="10" Background="LightBlue" Click="Button_Click" />

        <Label Grid.Row="4" Grid.Column="0" Content="Дискримінант:" FontFamily="Arial" FontSize="14" Margin="10" />
        <TextBox x:Name="textBoxDiscriminant" Grid.Row="4" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="10" IsReadOnly="True" />

        <Label Grid.Row="5" Grid.Column="0" Content="Розв'язок x1:" FontFamily="Arial" FontSize="14" Margin="10" />
        <TextBox x:Name="textBoxX1" Grid.Row="5" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="10" IsReadOnly="True" Visibility="Collapsed" />

        <Label Grid.Row="6" Grid.Column="0" Content="Розв'язок x2:" FontFamily="Arial" FontSize="14" Margin="10" />
        <TextBox x:Name="textBoxX2" Grid.Row="6" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="10" IsReadOnly="True" Visibility="Collapsed" />

        <TextBlock Grid.Row="7" Grid.Column="1" Text="ПІБ група" FontFamily="Arial" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
    </Grid>
</Window>
